<% include ../partials/header%>
    <form class="form" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <h1 style="text-align:center;">Edit Comment</h1>
        <div class="form-group">
            <label for="text">Text</label>
            <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" required>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <div class="text-center">
        <a href="/campgrounds">Go Back</a>
    </div>
<% include ../partials/footer%>